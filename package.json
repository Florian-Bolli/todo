{
  "name": "minimal-todo",
  "version": "2.0.0",
  "description": "A clean, minimal todo application built with Node.js, SQLite, and vanilla JavaScript",
  "type": "module",
  "main": "src/backend/server.js",
  "scripts": {
    "start": "node src/backend/server.js",
    "dev": "nodemon src/backend/server.js",
    "build": "echo 'No build step required for vanilla JS'",
    "clean": "rm -rf node_modules package-lock.json",
    "setup": "npm install",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:install": "playwright install"
  },
  "keywords": [
    "todo",
    "minimal",
    "nodejs",
    "sqlite",
    "javascript",
    "pwa",
    "offline"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "better-sqlite3": "^12.4.1",
    "nodemon": "^3.0.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}